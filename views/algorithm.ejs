<%- contentFor('title') %>
<%= title %>

<%- contentFor('body') %>
<div class='content-box'>
  <form action="<%= url %>" method="POST">

    <% if(form_type == 'number') { %>
      <% for(let i = 1; i <= input_count; i++) { %>
        <input type="number" name="num<%= i %>">
      <% } %>
    <% } else if(form_type == 'number_list') { %>
      <input type="text" name="num_list">
    <% } %>

    <input type="submit" value='enviar'>

    <% if (typeof result !== 'undefined' && result) { %>
      <h4><%= result %></h4>
    <% } %>
  </form>
</div>
