<%- contentFor('title') %>
<%= title %>

<%- contentFor('style') %>
<link rel='stylesheet' href='/static/css/algorithm.css' />

<%- contentFor('body') %>
<div class='content-box'>
  <div class='algorithm-content'>
    <h3 class='page-title'><%= title %></h3>

    <form action="<%= url %>" method="POST">

      <% if(form_type == 'number') { %>
        <% for(let i = 1; i <= input_count; i++) { %>
          <input type="number" name="num<%= i %>" placeholder="Informe o <%=input_count > 1 ? i + 'Â° ' : ''%>valor">
        <% } %>
      <% } else if(form_type == 'number_list') { %>
        <input type="text" name="num_list" placeholder="Informe os valores separados por virgula.">
      <% } %>

      <input type="submit" value='enviar'>
    </form>

    <% if (typeof result !== 'undefined' && result) { %>
      <h4 class='result-text'><%= result %></h4>
    <% } %>
  </div>
</div>
